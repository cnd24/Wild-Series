{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
    <h1 class="text-center">Index des épisodes</h1>
    <div class="text-center">
        <button type="button" class="btn btn-lg round m-5">
            <a href="{{ path('episode_new') }}"> Créer un épisode </a>
        </button>
    </div>
    <table class="table w-75 mx-auto">
        <thead>
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Numéro</th>
            <th>Synopsis</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>{{ episode.id }}</td>
                <td>{{ episode.title }}</td>
                <td>{{ episode.number }}</td>
                <td>{{ episode.synopsis }}</td>
                <td>
                    <a href="{{ path('episode_show', {'slug': episode.slug}) }}">voir</a>
                    <a href="{{ path('episode_edit', {'slug': episode.slug}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
