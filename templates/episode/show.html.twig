{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1 class="text-center">Episode {{ episode.title }}</h1>

    <table class="table w-75 mx-auto">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ episode.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ episode.title }}</td>
        </tr>
        <tr>
            <th>Numéro d'épisode</th>
            <td>{{ episode.number }}</td>
        </tr>
        <tr>
            <th>Synopsis</th>
            <td>{{ episode.synopsis }}</td>
        </tr>
        </tbody>
    </table>
    <button type="button" class="btn btn-lg round ml-5 mb-5">
        <a href="{{ path('episode_index') }}">retour à la liste</a>
    </button>
    <button type="button" class="btn btn-lg round ml-5 mb-5">
        <a href="{{ path('episode_edit', {'slug': episode.slug}) }}">Modifier</a>
    </button>
    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
