{% extends 'base.html.twig' %}

{% block title %}Saison{% endblock %}

{% block body %}
    <h1 class="text-center">Saison</h1>

    <table class="table w-75 mx-auto">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>

    <button type="button" class="btn btn-lg round ml-5 mb-5">
        <a href="{{ path('season_index') }}">Retour à la liste</a>
    </button>

    <button type="button" class="btn btn-lg round ml-5 mb-5">
        <a href="{{ path('season_edit', {'id': season.id}) }}">Modifier</a>
    </button>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
