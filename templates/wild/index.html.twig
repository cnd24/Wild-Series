{% extends 'base.html.twig' %}

{% block title %}Wild Series | Toutes les séries{% endblock %}

{% block body %}
    <h1 class="text-center">Toutes les séries</h1>
    <div class="row">

        {% for program in programs %}
            <div class="col-sm-3">
                <div class="card text-center m-5">
                    <h4 class="card-header font-weight-bold "><a
                                href="{{ path('show_program', {'slug':program.title|lower|replace({' ': '-'})}) }}">{{ program.title }}</a>
                    </h4>
                    <img class="align-self-center mt-2 h-25 rounded" src="{{ program.poster }}"
                         alt="{{ program.title }}">
                    <div class="card-body">
                        <p>Catégorie : {{ program.category.name }}</p>
                        <p class="card-text">{{ program.summary }}</p>
                    </div>
                    <div class="card-body">
                        <p>Acteurs :</p>
                        {% for actor in program.actors %}
                        {{actor.name}},
                            {% else %}
                            <p> Aucun acteur présent dans la série</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% else %}
            Aucune série trouvée.
        {% endfor %}
    </div>

{% endblock %}