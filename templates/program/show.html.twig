{% extends 'base.html.twig' %}

{% block title %}Série{% endblock %}

{% block body %}
    <h1 class="text-center">Série {{ program.title }}</h1>

    <table class="table w-75 mx-auto">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ program.summary }}</td>
            </tr>
            <tr>
                <th>Affiche</th>
                <td>{{ program.poster }}</td>
            </tr>
        </tbody>
    </table>

    <button type="button" class="btn btn-lg round ml-5 mb-5">
        <a href="{{ path('program_index') }}">Retour à la liste</a>
    </button>
    <button type="button" class="btn btn-lg round ml-5 mb-5">
        <a href="{{ path('program_edit', {'id': program.id}) }}">Modifier</a>
    </button>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}
