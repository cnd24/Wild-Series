{% extends 'base.html.twig' %}

{% block title %}Index des séries{% endblock %}

{% block body %}
    <h1 class="text-center">Index des séries</h1>

    <table class="table w-75 mx-auto">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Résumé</th>
                <th>Affiche</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td>{{ program.title }}</td>
                <td>{{ program.summary }}</td>
                <td>{{ program.poster }}</td>
                <td>
                    <a href="{{ path('program_show', {'id': program.id}) }}">voir</a>
                    <a href="{{ path('program_edit', {'id': program.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-lg round ml-5 mb-5">
        <a href="{{ path('program_new') }}"> Créer </a>
    </button>
{% endblock %}
